{
    "name": "repat/laravel-helper",
    "description": "Some helper function for developing with Laravel 5+",
    "keywords": ["laravel", "helper", "files", "array", "database", "strings", "date"],
    "homepage": "https://repat.de",
    "license": "MIT",
    "version" : "0.3",
    "authors": [
        {"name": "repat", "email": "repat@repat.de"}
    ],
    "require": {
        "illuminate/database": "5.*|6.*|7.*|8.*",
        "php": ">=7.2",
        "repat/php-helper": "^0.1.15"
    },
    "autoload": {
        "files": [
            "src/database_helpers.php",
            "src/defines.php",
            "src/html_helpers.php",
            "src/networking_helpers.php",
            "src/object_helpers.php",
            "src/optional_packages_helpers.php"
        ]
    },
    "minimum-stability" : "dev",
    "suggest": {
        "astrotomic/laravel-translatable": "Required to use translated_attributes()",
        "spatie/laravel-image-optimizer" : "Required to use ImageOptimizer in extract_inline_img()"
    }
}
